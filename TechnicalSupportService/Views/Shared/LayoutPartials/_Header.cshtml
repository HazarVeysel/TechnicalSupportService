@using DataAccessLayer.Models;

@{
    var repository = (helpdeskEntities)ViewBag.Repository;
    var categories = repository.Categories.Where(x => x.Category_Parent_ID == null).ToList();
    var UserIdInfo = Convert.ToInt32(Session["UserInfo"]);
}

<header>
    <nav id="navbar_top" class="navbar navbar-expand-lg bg-white" style="box-shadow: rgb(0 0 0 / 3%) 0px 2px 0px 0px;">
        <div class="container" style="padding: 0;">
            <div class="container" style="padding: 0;">
                <a class="navbar-brand" href="/" style="color:#4c4c4c">
                    <img src="~/Content/images/logo/my_bati_helpdesk.png" alt="Batı Logistic" height="40"><strong class="ml-1">HELP CENTER</strong>
                </a>
                <button class="navbar-toggler navbar-light collapsed" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="mainNav" style="">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-nowrap" role="button" href="/FAQ/index" style="color: #000000;" id="accountDropdown" aria-expanded="false">Ana Sayfa</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" style="color: #000000;" id="productDropdown" aria-expanded="false">Kategoriler</a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="productDropdown">
                            @foreach (var item in categories)
                            {
                                <li>
                                    <a class="dropdown-item" href="/FAQ/CategoryDetails/@item.Category_ID">
                                        @item.Category_Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-nowrap" href="/FAQ/Questions" role="button" style="color: #000000;" aria-expanded="false">Tüm Sorular</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-nowrap" href="/FAQ/MyRequests" role="button" style="color: #000000;" aria-expanded="false">Taleplerim</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-nowrap" role="button" href="/FAQ/AddNewRequestWithMessage" style="color: #000000;" aria-expanded="false">Yeni Talep</a>
                    </li>
                    @if (UserIdInfo != 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-nowrap bold" role="button" href="/Login/Logout" style="color: #000000;" aria-expanded="false">Çıkış Yap</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>
