
@using DataAccessLayer.Models;
@model List<RequestCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main">
    <div class="row">
        <div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
        <div class="breadcrumbs-dark pb-0 pt-0" id="breadcrumbs-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col s10 m6">
                        <ol class="breadcrumbs mb-0">
                            <li class="breadcrumb-item">
                                <a href="#">Talep Kategorileri</a>
                            </li>
                        </ol>
                    </div>
                    <div class="col s2 m6 l6">

                        <ul class="dropdown-content" id="dropdown1" tabindex="0">
                            <li tabindex="0"><a class="grey-text text-darken-2" href="user-profile-page.html">Profilim<span class="new badge red">2</span></a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li tabindex="0"><a class="grey-text text-darken-2" href="user-login.html">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12">
            <div class="container">
                <section class="users-list-wrapper section">
                    <div class="users-list-table">
                        <div class="card">
                            <div class="card-content">
                                <div class="col s11">
                                    <br />
                                    <span class="card-title"><b>Talep Kategorileri</b></span>
                                </div>
                                <div class="col s1">
                                    <ol class="breadcrumb float-sm-right">

                                        <a class="mb-6 btn-floating btn-large waves-effect waves-light orange darken-1" href="/RequestCategory/EditRequestCategory/0" />
                                        <i class="material-icons">add</i>

                                        </a>

                                    </ol>
                                </div>
                                <div class="responsive-table">
                                    <table id="messagebyreq" class="table" role="grid">
                                        <thead>
                                            <tr>
                                                <th style="width: 5%">
                                                    ID
                                                </th>
                                                <th style="width: 20%">
                                                    Kategori Adı
                                                </th>
                                                <th style="width: 30%">
                                                    Açıklama
                                                </th>
                                                <th style="width: 10%">
                                                    Oluşturulma Tarihi
                                                </th>
                                                <th style="width: 8%">
                                                    Aktiflik
                                                </th>
                                                <th style="width: 3%">
                                                    Düzenle
                                                </th>
                                                <th style="width: 7%">
                                                    Aktif/Pasif Yap
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.RequestCategory_Id
                                                    </td>
                                                    <td>
                                                        <ul class="list-inline">

                                                            <li class="list-inline-item">
                                                                @item.RequestCategory_Name
                                                            </li>
                                                        </ul>
                                                    </td>
                                                    <td>
                                                        @item.Category_Description
                                                    </td>

                                                    <td>

                                                        <span>@(((DateTime)item.Create_Date).ToString("dd MMMMM yyyy-HH:mm"))</span>

                                                    </td>
                                                    <td class="project-state">
                                                        @Html.Raw(item.IsActive == true ? "<span class='chip green lighten-5'><span class='green-text' style='font-size:16px' >Aktif</span></span>" : "<span class='chip red lighten-5'><span class='red-text' style='font-size:16px'>Pasif</span></span>")

                                                    </td>
                                                    <td class="center">
                                                        <a href="/RequestCategory/EditRequestCategory/@item.RequestCategory_Id">
                                                            <i class="material-icons">
                                                                edit
                                                            </i>

                                                        </a>
                                                    </td>
                                                    <td class="project-actions center">

                                                        @if (item.IsActive == false)
                                                        {
                                                            <a href="/RequestCategory/ActivateRequestCategory/@item.RequestCategory_Id">
                                                                <i class="material-icons">
                                                                    done
                                                                </i>

                                                            </a>
                                                        }
                                                        else
                                                        { <a href="/RequestCategory/DeleteRequestCategory/@item.RequestCategory_Id">
                                                                <i class="material-icons">
                                                                    do_not_disturb_alt
                                                                </i>

                                                            </a>
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
